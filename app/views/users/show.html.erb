<% if @user != nil %>
  <% provide :title, @user.name %>
  <%= @user.name %>, <%= @user.email %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
        </h1>
      </section>
    </aside>
  </div>
<% else %>
  <div>Nguoi dung khong ton tai</div>
<% end %>
